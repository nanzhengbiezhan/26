<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--2、按下后单纯的变颜色-->
    <item android:state_pressed="false" android:drawable="@color/crolors1"/><!-- 按钮未点击-->
    <item android:state_pressed="true" android:drawable="@color/crolors2"/> <!-- 按钮选中状态-->
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="20dp" /><!--圆角弧度-->
            <solid android:color="#5151A2" /><!--按钮背景颜色-->

        </shape>
    </item>


</selector>


